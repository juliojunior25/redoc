{
  "name": "@redoc/cli",
  "version": "1.1.4",
  "description": "CLI tool to capture developer brain dumps via git hooks and AI-generated questions",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "redoc": "./dist/cli.js"
  },
  "scripts": {
    "build": "rm -rf dist && bun build src/cli.ts --outdir dist --target bun --sourcemap=external && chmod +x dist/cli.js",
    "dev": "bun --watch src/cli.ts",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "keywords": [
    "documentation",
    "git",
    "ai",
    "developer-tools",
    "brain-dump"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "simple-git": "^3.21.0",
    "groq-sdk": "^0.3.0",
    "marked": "^11.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.3",
    "@types/inquirer": "^9.0.7"
  }
}
